<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.offcn.dao.UserDao">

    <select id="selectList" resultType="user">
        select * from t_user
    </select>


    <select id="selectOne" parameterType="int" resultType="user">
        select * from t_user where uid = #{uid}
    </select>

    <select id="update" parameterType="User">
        update t_user set uname = #{uname}, upwd = #{upwd} where uid = #{uid}
    </select>

    <select id="delete" parameterType="int">
        delete from t_user where uid = #{uid}
    </select>

    <select id="save" parameterType="User">
        insert into t_user(uname,upwd) values(#{uname},#{upwd})
    </select>


</mapper>